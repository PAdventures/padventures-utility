{
    "compilerOptions": {
		"declaration": true,
		"outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declarationDir": "./dist/types",
	},
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}